@model Ferreteria.Models.ViewModels.TrabajoViewModel

@{ Layout = null; }

<div class="row">
    <div class="col-md-12">
        <form asp-action="Upsert" asp-route-id="@Model.Trabajo.IdTrabajo" onsubmit="return PostForm(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Trabajo.IdTrabajo" />
            <div class="form-group">
                <label asp-for="Trabajo.IdCliente" class="control-label"></label>
                <div class="col-8">
                    @Html.DropDownListFor(s => s.Trabajo.IdCliente, Model.Cliente, "-Seleccione un cliente", new { @class = "form-control" })
                    <span asp-validation-for="Trabajo.IdCliente" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Trabajo.NombreTrabajo" class="control-label">Nombre Trabajo</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text"></div>
                    </div>
                    <input asp-for="Trabajo.NombreTrabajo" class="form-control" />
                </div>
                <span asp-validation-for="Trabajo.NombreTrabajo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="Guardar" class="btn btn-primary btn-block" />
                </div>
            </div>
        </form>
    </div>
</div>